<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_navigation"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.sekalisubmit.githubmu.ui.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_settingFragment"
            app:destination="@id/settingFragment" />
        <action
            android:id="@+id/action_homeFragment_to_detailUserActivity"
            app:destination="@id/detailUserActivity" />
    </fragment>

    <fragment
        android:id="@+id/settingFragment"
        android:name="com.sekalisubmit.githubmu.ui.SettingFragment"
        android:label="fragment_setting"
        tools:layout="@layout/fragment_setting">
        <action
            android:id="@+id/action_settingFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/homeFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <activity
        android:id="@+id/detailUserActivity"
        android:name="com.sekalisubmit.githubmu.ui.DetailUserActivity"
        android:label="activity_detail_user"
        tools:layout="@layout/activity_detail_user" >
        <argument
            android:name="idActivity"
            app:argType="string"
            android:defaultValue="default" />
    </activity>
</navigation>